//Arrays methods

//1. push(),  pop(), tostring()

let fruits =["apple","mango","graps","orange"];
fruits.push("Lays","nuts","juices");
console.log(fruits);

let fruitsitem =["apple","mango","graps","orange"];
console.log(fruitsitem);
let deleted =fruitsitem.pop();
console.log(fruitsitem);
console.log(deleted);
console.log(fruitsitem.toString());

//Array methods 2

//concat(), unshift(), shift(),

let marvel=["thor","captain","spiderman","bat man"];
let southher=["alluarjun","dalqueer","maheshbabu"];

let newcombine =marvel.concat(southher);
console.log(newcombine);


